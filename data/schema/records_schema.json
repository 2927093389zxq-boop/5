{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RecordData",
  "description": "Schema for validated record data",
  "type": "object",
  "required": ["id", "createdAt"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the record"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of record creation"
    },
    "name": {
      "type": "string",
      "description": "Name field"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Email address (will be anonymized)"
    },
    "phone": {
      "type": "string",
      "description": "Phone number (will be anonymized)"
    },
    "status": {
      "type": "string",
      "enum": ["active", "inactive", "pending"],
      "description": "Record status"
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata"
    }
  }
}
